#!/bin/sh
# postinst script for heliotrope
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

        if [ ! -e /etc/heliotrope/heliotrope-config.groovy ] ; then
          cp /etc/heliotrope/heliotrope-config.groovy.template /etc/heliotrope/heliotrope-config.groovy
        fi

        RET=""
        db_get heliotrope-server/database_host
        DB_HOST=$RET
        sed -i "s/_DBC_DBSERVER_/$DB_HOST/" /etc/heliotrope/heliotrope-config.groovy

        RET=""
        db_get heliotrope-server/database_port
        DB_PORT=$RET
        sed -i "s/_DBC_DBPORT_/$DB_PORT/" /etc/heliotrope/heliotrope-config.groovy

        RET=""
        db_get heliotrope-server/database_name
        DB_NAME=$RET
        sed -i "s/_DBC_DBNAME_/$DB_NAME/" /etc/heliotrope/heliotrope-config.groovy

        RET=""
        db_get heliotrope-server/database_username
        DB_USER=$RET
        sed -i "s/_DBC_DBUSER_/$DB_USER/" /etc/heliotrope/heliotrope-config.groovy

        RET=""
        db_get heliotrope-server/database_password
        DB_PASSWORD=$RET
        sed -i "s/_DBC_DBPASS_/$DB_PASSWORD/" /etc/heliotrope/heliotrope-config.groovy

    	RET=""
        db_get heliotrope-server/admin_password

        if [ "$RET" != "" ] ; then
            echo Updating administrator password.
            # We should really hash the password instead of storing in clear-text
            #adminpw=`echo -n $RET | sha256sum | cut -d ' ' -f 1`
            adminpw=$RET
            tfile=`mktemp`
	        if [ ! -f "$tfile" ]; then
               return 1
            fi
			cat /etc/heliotrope/shiro.ini | sed \
			  -e "s/^administrator\s*=.*,/administrator=$adminpw,/" \
			  > $tfile && mv $tfile /etc/heliotrope/shiro.ini
        fi

    	# Create heliotrope user if it doesn't exist.
        if ! id heliotrope > /dev/null 2>&1 ; then
            adduser --system --home /var/lib/heliotrope --no-create-home \
				 --disabled-password heliotrope
        fi

        rm -f /usr/share/heliotrope
        ln -s /usr/share/heliotrope-* /usr/share/heliotrope

        if [ ! -e /var/lib/heliotrope/conf ] ; then
          ln -s /etc/heliotrope /var/lib/heliotrope/conf
        fi

        chown -R heliotrope:adm /var/lib/heliotrope /var/log/heliotrope /etc/heliotrope
        chmod -R 750      /var/lib/heliotrope /var/log/heliotrope /etc/heliotrope
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
