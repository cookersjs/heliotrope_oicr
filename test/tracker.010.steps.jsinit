db.steps.ensureIndex({studyId:1,appliesTo:1,name:1},{unique:true});

function get_step_id(study_id, appliesTo, name) {
  return ObjectId(db.steps.find({"studyId" : study_id, "appliesTo" : appliesTo, "name" : name}).next()._id.str);
}

